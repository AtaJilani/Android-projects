<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/evbg"
    tools:context="com.fa15be.evoteapp.LoginActivity">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/evotelogo"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/ed_Pass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="LOGIN"
        android:textSize="20dp" />

    <TextView
        android:text="Register Here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/RegistrationBtn"
        android:textStyle="normal|bold"
        android:visibility="visible"
        android:layout_below="@+id/btnSignup"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:background="#11000000"
        android:id="@+id/ed_Mail"
        android:hint="E-Mail"
        android:drawableLeft="@drawable/ic_action_user"
        android:textColorHint="#ffffff"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:background="#11000000"
        android:layout_marginTop="29dp"
        android:id="@+id/ed_Pass"
        android:drawableLeft="@drawable/ic_action_password"
        android:hint="Password"
        android:textColorHint="#ffffff"
        android:layout_below="@+id/ed_Mail"
        android:layout_alignLeft="@+id/ed_Mail"
        android:layout_alignStart="@+id/ed_Mail" />

</RelativeLayout>
