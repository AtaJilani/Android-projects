<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cast_vote_or_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/evbg"
    tools:context="com.fa15be.evoteapp.CastVoteOrResultActivity">

    <Button
        android:text="Click Here To Cast Your Vote"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="158dp"
        android:id="@+id/CastBtn" />

    <Button
        android:text="Result Of Voting"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="64dp"
        android:id="@+id/ResultBtn"
        android:layout_below="@+id/CastBtn"
        android:layout_alignLeft="@+id/CastBtn"
        android:layout_alignStart="@+id/CastBtn" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/CastBtn"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/CastBtn" />
</RelativeLayout>
