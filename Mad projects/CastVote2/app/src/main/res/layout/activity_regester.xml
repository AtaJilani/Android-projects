<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    tools:context="com.example.engrmajilani.castvote.regester"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editname"
        android:layout_marginStart="42dp"
        android:layout_marginTop="40dp"
        android:text="Register"
        android:textAlignment="center"
        android:textSize="24sp" />


    <EditText
        android:id="@+id/editname"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/editpassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editname"
        android:layout_below="@+id/editname"
        android:layout_marginTop="7dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editemail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editpassword"
        android:layout_below="@+id/editpassword"
        android:layout_marginTop="7dp"
        android:ems="10"
        android:hint="Re-Password"
        android:inputType="textPassword" />

        <EditText
            android:id="@+id/editphone"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/editemail"
            android:layout_below="@+id/editemail"
            android:layout_marginTop="7dp"
            android:ems="10"
            android:hint="Phone Number"
            android:inputType="phone" />

        <EditText
            android:id="@+id/editcnic"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/editphone"
            android:layout_below="@+id/editphone"
            android:layout_marginTop="7dp"
            android:ems="10"
            android:hint="CNIC"
            android:inputType="number" />

    <EditText
        android:id="@+id/editaddress"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editcnic"
        android:layout_below="@+id/editcnic"
        android:ems="10"
        android:hint="Address"
        android:inputType="textLongMessage" />

    <Button

        android:id="@+id/btnregester"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/editaddress"
        android:layout_marginStart="36dp"
        android:layout_marginTop="22dp"
        android:background="@color/colorPrimary"
        android:fontFamily="serif-monospace"
        android:text="Register"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnregester"
        android:layout_below="@+id/btnregester"
        android:layout_marginStart="43dp"
        android:layout_marginTop="9dp"
        android:text="Back"
        android:textColor="#0058A2"
        android:textSize="15sp"
        android:textStyle="bold|italic" />


</android.widget.RelativeLayout>
